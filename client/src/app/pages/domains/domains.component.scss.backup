.domains-container {
  padding: 2rem;
  max-width: 1400px;
  margin: 0 auto;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 2rem;

  h1 {
    font-size: 2rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 0.5rem 0;
  }

  p {
    color: #666;
    margin: 0;
  }
}

.btn-primary {
  padding: 0.75rem 1.5rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-weight: 500;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  transition: transform 0.2s;

  &:hover {
    transform: translateY(-2px);
  }
}

.btn-secondary {
  padding: 0.5rem 1rem;
  background: #f8f9fa;
  color: #1a1a1a;
  border: 1px solid #dee2e6;
  border-radius: 6px;
  font-weight: 500;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  text-decoration: none;
  transition: all 0.2s;

  &:hover {
    background: #e9ecef;
    border-color: #adb5bd;
  }

  &.danger {
    color: #dc3545;

    &:hover {
      background: #dc3545;
      color: white;
      border-color: #dc3545;
    }
  }
}

// Info Card
.info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 16px;
  padding: 2rem;
  display: flex;
  gap: 1.5rem;
  margin-bottom: 3rem;

  .info-icon {
    font-size: 3rem;
    opacity: 0.9;
  }

  .info-content {
    flex: 1;

    h3 {
      font-size: 1.5rem;
      font-weight: 600;
      margin: 0 0 0.5rem 0;
    }

    p {
      margin: 0;
      opacity: 0.95;
      line-height: 1.6;
    }
  }
}

// Providers Section
.providers-section {
  margin-bottom: 3rem;

  h2 {
    font-size: 1.75rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 1.5rem 0;
  }
}

.providers-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 1.5rem;
}

.provider-card {
  background: white;
  border: 2px solid #f0f0f0;
  border-radius: 12px;
  padding: 1.5rem;
  text-align: center;
  transition: transform 0.2s, border-color 0.2s;

  &:hover {
    transform: translateY(-4px);
    border-color: #667eea;
  }

  .provider-logo {
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;

    img {
      max-width: 120px;
      max-height: 50px;
      object-fit: contain;
    }
  }

  h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 0.5rem 0;
  }

  p {
    color: #666;
    font-size: 0.9rem;
    margin: 0 0 1.5rem 0;
  }

  .provider-actions {
    display: flex;
    gap: 0.5rem;
  }
}

// Domains Section
.domains-section {
  margin-bottom: 3rem;

  h2 {
    font-size: 1.75rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 1.5rem 0;
  }
}

.domains-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.domain-card {
  background: white;
  border: 2px solid #f0f0f0;
  border-radius: 12px;
  padding: 1.5rem;
  transition: border-color 0.2s;

  &:hover {
    border-color: #667eea;
  }

  .domain-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #f0f0f0;

    .domain-name {
      display: flex;
      align-items: center;
      gap: 1rem;

      i {
        font-size: 1.5rem;
        color: #667eea;
      }

      h3 {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0;
      }
    }

    .domain-status {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.35rem 0.75rem;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 500;

      .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
      }

      &.active {
        background: #d4edda;
        color: #155724;

        .status-dot {
          background: #28a745;
        }
      }

      &.pending {
        background: #fff3cd;
        color: #856404;

        .status-dot {
          background: #ffc107;
        }
      }

      &.error {
        background: #f8d7da;
        color: #721c24;

        .status-dot {
          background: #dc3545;
        }
      }
    }
  }

  .domain-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;

    .info-item {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;

      .label {
        font-size: 0.85rem;
        color: #999;
      }

      strong {
        font-size: 1rem;
        color: #1a1a1a;

        &.success {
          color: #28a745;
        }

        &.danger {
          color: #dc3545;
        }

        i {
          margin-right: 0.25rem;
        }
      }
    }
  }

  .domain-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }
}

// Empty State
.empty-state {
  text-align: center;
  padding: 4rem 2rem;
  background: white;
  border-radius: 12px;
  border: 2px dashed #dee2e6;

  i {
    font-size: 4rem;
    color: #ddd;
    margin-bottom: 1.5rem;
  }

  h3 {
    font-size: 1.5rem;
    color: #1a1a1a;
    margin: 0 0 0.5rem 0;
  }

  p {
    color: #666;
    margin: 0 0 2rem 0;
  }
}

// Modal
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 1rem;
}

.modal {
  background: white;
  border-radius: 12px;
  width: 100%;
  max-width: 600px;
  max-height: 90vh;
  overflow: auto;

  &.tutorial-modal {
    max-width: 700px;
  }

  .modal-header {
    padding: 1.5rem;
    border-bottom: 1px solid #dee2e6;
    display: flex;
    justify-content: space-between;
    align-items: center;

    h2 {
      font-size: 1.5rem;
      font-weight: 600;
      color: #1a1a1a;
      margin: 0;
    }

    .close-btn {
      background: none;
      border: none;
      font-size: 1.5rem;
      color: #999;
      cursor: pointer;
      padding: 0;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;

      &:hover {
        color: #666;
      }
    }
  }

  .modal-body {
    padding: 1.5rem;

    .info-box {
      background: #e7f3ff;
      border-left: 4px solid #2196f3;
      padding: 1rem;
      border-radius: 4px;
      display: flex;
      gap: 1rem;
      margin-bottom: 1.5rem;

      i {
        color: #2196f3;
        font-size: 1.25rem;
        flex-shrink: 0;
      }

      p {
        margin: 0;
        color: #1a1a1a;
        line-height: 1.5;
      }
    }

    .form-group {
      margin-bottom: 1.5rem;

      label {
        display: block;
        font-weight: 500;
        color: #1a1a1a;
        margin-bottom: 0.5rem;
      }

      input, select {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        font-size: 0.95rem;

        &:focus {
          outline: none;
          border-color: #667eea;
        }
      }

      small {
        display: block;
        margin-top: 0.5rem;
        color: #999;
        font-size: 0.85rem;
      }
    }

    .modal-actions {
      display: flex;
      gap: 1rem;
      justify-content: flex-end;
      margin-top: 2rem;

      button, a {
        padding: 0.75rem 1.5rem;
      }
    }
  }
}

// Tutorial Specific Styles
.tutorial-intro {
  margin-bottom: 2rem;

  p {
    font-size: 1rem;
    color: #666;
    margin: 0;
  }
}

.tutorial-steps {
  margin-bottom: 2rem;

  .step {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;

    &:last-child {
      margin-bottom: 0;
    }

    .step-number {
      width: 32px;
      height: 32px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      flex-shrink: 0;
    }

    .step-content {
      flex: 1;
      padding-top: 0.25rem;

      p {
        margin: 0;
        color: #1a1a1a;
        line-height: 1.8;
        white-space: pre-wrap;
      }
    }
  }
}

.tutorial-note {
  background: #fff8e1;
  border-left: 4px solid #ffc107;
  padding: 1rem;
  border-radius: 4px;
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;

  i {
    color: #ffc107;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  strong {
    display: block;
    color: #1a1a1a;
    margin-bottom: 0.5rem;
  }

  p {
    margin: 0;
    color: #666;
    line-height: 1.5;
  }
}

// Responsive
@media (max-width: 768px) {
  .domains-container {
    padding: 1rem;
  }

  .page-header {
    flex-direction: column;
    gap: 1rem;

    .btn-primary {
      width: 100%;
      justify-content: center;
    }
  }

  .info-card {
    flex-direction: column;
    text-align: center;
  }

  .providers-grid {
    grid-template-columns: 1fr;
  }

  .domain-card {
    .domain-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .domain-actions {
      flex-direction: column;

      button {
        width: 100%;
      }
    }
  }

  .modal-body .modal-actions {
    flex-direction: column;

    button, a {
      width: 100%;
      justify-content: center;
    }
  }
}
